<% content_for :canonical do %>
  <%= render "shared/canonical", href: faq_url %>
<% end %>

<div class="row faq">
  <div class="main-indented-content">
  <div class="small-12 medium-9 column">
    <h1 class="clear"><%= t("pages.help.faq.page.title") %></h1>

    <% t("pages.help.faq.page.questions").each_with_index do |item, index| %>
      <h2 id="<%= index + 1 %>"><%= item[:question] %></h2>
      <p><%= item[:answer] %></p>
    <% end %>
  </div>
  </div>
</div>
