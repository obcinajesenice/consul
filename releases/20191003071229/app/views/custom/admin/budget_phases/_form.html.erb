<%= render "admin/shared/globalize_locales", resource: @phase %>

<%= translatable_form_for [:admin, @phase.budget, @phase] do |f| %>

  <div class="small-12 medium-6 column">
    <%= f.label :starts_at, t("admin.budget_phases.edit.start_date") %>
    <%= f.text_field :starts_at,
                      value: format_date_for_calendar_form(@phase.starts_at),
                      class: "js-calendar-full",
                      id: "start_date",
                      label: false %>
  </div>
  <div class="small-12 medium-6 column">
    <%= f.label :ends_at, t("admin.budget_phases.edit.end_date") %>
    <%= f.text_field :ends_at,
                      value: format_date_for_calendar_form(@phase.ends_at),
                      class: "js-calendar-full",
                      id: "end_date",
                      label: false %>
  </div>

  <%= f.translatable_fields do |translations_form| %>

    <div class="small-12 column">
      <%= translations_form.label :description, t("admin.budget_phases.edit.description") %>

      <span class="help-text" id="phase-description-help-text">
        <%= t("admin.budget_phases.edit.description_help_text") %>
      </span>

      <%= translations_form.cktext_area :description,
                        maxlength: Budget::Phase::DESCRIPTION_MAX_LENGTH,
                        ckeditor: { language: I18n.locale },
                        label: false %>
    </div>

    <div class="small-12 column margin-top">
      <%= translations_form.label :summary, t("admin.budget_phases.edit.summary") %>

      <span class="help-text" id="phase-summary-help-text">
        <%= t("admin.budget_phases.edit.summary_help_text") %>
      </span>

      <%= translations_form.cktext_area :summary,
                        maxlength: Budget::Phase::SUMMARY_MAX_LENGTH,
                        ckeditor: { language: I18n.locale },
                        label: false %>
    </div>

    <div class="small-12 column margin-top">
      <%= translations_form.label :presentation_summary_1, t("admin.budget_phases.edit.presentation_summary_1") %>

      <span class="help-text" id="phase-summary-help-text">
        <%= t("admin.budget_phases.edit.presentation_summary_1_help_text") %>
      </span>

      <%= translations_form.cktext_area :presentation_summary_1,
                        maxlength: Budget::Phase::SUMMARY_MAX_LENGTH,
                        ckeditor: { language: I18n.locale },
                        label: false %>
    </div>

    <div class="small-12 column margin-top">
      <%= translations_form.label :presentation_summary_2, t("admin.budget_phases.edit.presentation_summary_2") %>

      <span class="help-text" id="phase-summary-help-text">
        <%= t("admin.budget_phases.edit.presentation_summary_2_help_text") %>
      </span>

      <%= translations_form.cktext_area :presentation_summary_2,
                        maxlength: Budget::Phase::SUMMARY_MAX_LENGTH,
                        ckeditor: { language: I18n.locale },
                        label: false %>
    </div>

    <div class="small-12 column margin-top">
      <%= translations_form.label :presentation_summary_3, t("admin.budget_phases.edit.presentation_summary_3") %>

      <span class="help-text" id="phase-summary-help-text">
        <%= t("admin.budget_phases.edit.presentation_summary_3_help_text") %>
      </span>

      <%= translations_form.cktext_area :presentation_summary_3,
                        maxlength: Budget::Phase::SUMMARY_MAX_LENGTH,
                        ckeditor: { language: I18n.locale },
                        label: false %>
    </div>
  
  <% end %>

  <div class="small-12 column margin-top">
    <%= f.check_box :enabled, label: t("admin.budget_phases.edit.enabled") %>

    <span class="help-text" id="phase-summary-help-text">
      <%= t("admin.budget_phases.edit.enabled_help_text") %>
    </span>
  </div>

  <div class="small-12 medium-4 large-3 column end margin-top">
    <%= f.submit t("admin.budget_phases.edit.save_changes"), class: "button success expanded" %>
  </div>

<% end %>
